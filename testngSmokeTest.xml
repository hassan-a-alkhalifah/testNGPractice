<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite">
  <test name="Regression">
  <!-- This is basically saying to run all test methods
  with which were tagged(Grouped) with the Name Smoke
   -->
  	<groups>
  		<run>
  			<include name="Smoke"/>
  			<!-- 
  			You can use exclude tag to run all test cases
  			excluding specified group name
  			<exclude name="Smoke"/>
  			 -->
  		</run>
  	</groups>
    <classes>
    	<class name="testCases.firstTestCase"/>
    	<class name="testCases.SecondDummyTest"/>
    	<class name="testCases.ThirdDummyTest"/>
    	<class name="testCases.FourthDummyTest"/>
    </classes>
  </test>
</suite> <!-- Suite -->
